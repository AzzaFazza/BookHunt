<h1>Add A New Post</h1>

<%= form_for Post.new do |f| %>

  <!-- Title -->
  <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
  </p>

  <!-- Content -->
  <p>
      <%= f.label :content %><br />
      <%= f.text_area :content %>
  </p>

   <!-- Poster -->
  <p>
     <%= f.label :poster %><br />
     <%= f.text_area :poster %>
   </p>

   <!-- Upvote Count -->
   <p>
     <%= f.label :upvoteCount %><br />
     <%= f.text_area :upvoteCount %>
   </p>


  <!-- Submit -->
  <p>
    <%= f.submit "Add a new Book" %>
  </p>

<% end %>
